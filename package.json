    "@ethersproject/wallet": "^5.7.0",
    "ethers": "^6.9.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@types/uuid": "^9.0.7",
    "prettier": "^3.0.2",
